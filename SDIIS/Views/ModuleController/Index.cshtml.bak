@model IEnumerable<Common_Objects.Models.Module_Controller>
@using GridMvc.Html

@{
    ViewBag.Title = "Module Controllers Page";
}
@using (Html.BeginForm("Index", "ModuleController", FormMethod.Get))
{
<h3>@ViewBag.Message</h3>

<div class="panel-body" overflow:hidden">
    <div class="panel panel-primary form-horizontal" style=" width:100% !important">

        <div class="panel-heading" style="text-align: center; vertical-align: middle !important;">
            <div class="row">
                <div class="col-md-11 vcenter">
                    @Html.Label("Search Module Controllers")
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @Html.Label("Controller Name:")
        </div>
        <div class="col-md-3" form-group">
            @Html.Editor("SearchControllerName", new { @class = "form-control" })
        </div>
        <div class="col-md-3">
            @Html.Label("Module:")
        </div>
        <div class="col-md-3">
            @Html.Editor("SearchModule", new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="form-group" align="right">
            <input type="submit" id="ButtonSave" value="Search" class="btn btn-success" />
        </div>
    </div>

</div>

<div class="panel panel-primary form-horizontal" style=" width:100% !important">
    <div class="panel-heading" style="text-align: center; vertical-align: middle !important;">
        <div class="row">
            <div class="col-md-11">
                @Html.Label("Module Controllers")
            </div>
            <div class="col-md-1">
                @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-info pull-right" })
            </div>
        </div>
    </div>
    <div class="panel-body" style="height: 400px; overflow:hidden">
        <div class="row">
            <div class="row">
                <div class="col-md-12">
                    @Html.Grid(Model).Columns(columns =>
               {
               columns.Add(x => x.Module_Controller_Name).Titled("Controller Name").Sortable(true);
               columns.Add(x => x.Module.Description).Titled("Module").Sortable(true);
               columns.Add().Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(d => @<b> @Html.ActionLink("Edit", "Edit", new { id = d.Module_Controller_Id }, new { @class = "btn btn-success" }) </b>);
         columns.Add().Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(d => @<b> @Html.ActionLink("Delete", "Delete", new { id = d.Module_Controller_Id }, new { @class = "btn btn-danger" }) </b>);
         }).WithPaging(5)
                </div>
            </div>
        </div>
    </div>
</div>
}