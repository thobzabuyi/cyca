                content: 'Would you like to upload document(s)?',
                buttons: {
                    Yes: function () {
                        NewUploadDocument(id);
                    },
                    No: function () {
                        location.reload(true);
                    }
                }
            });
        }
    function NewUploadDocument(id) {
            $.ajax({
                type: 'POST',
                url: '@Url.Content("~/Admit/AdmitNewUploadDocument")',
