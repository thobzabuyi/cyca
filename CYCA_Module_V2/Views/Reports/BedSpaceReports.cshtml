                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<script>

    var tabBed = {
        bedspace: 1
    }
            $(document).ready(function () {
        $("#Quarters").change(function () {
            console.log("clicked quarter" + '@Model.Year');
            console.log($("#Quarters").val());

            var selectedValue = $(this).find('option:selected').val();
            console.log(selectedValue + " this value");

                  console.log("next");
                 $.ajax({
                type: 'POST',
                url: '@Url.Content("~/ReportChart/ShowTab")',
                     data: {
                         type: tabAdd.admission,
                         page: @ViewBag.Page,
                         quarter: selectedValue,
                         year: $("#Years").val()
                },
                     success: function (result) {

                         $('#BedSpaceList').empty();
                         $('#BedSpaceList').append(result);
                }
            });


        });
        $("#Years").change(function () {
            console.log("clicked quarter");
            var selectedValue = $(this).find('option:selected').val();
            console.log($("#Quarters").val());
            console.log(selectedValue + " this value");

                        $.ajax({
                type: 'POST',
                url: '@Url.Content("~/ReportChart/ShowTab")',
                     data: {
                         type: tabAdd.admission,
                         page: @ViewBag.Page,
                         quarter: $("#Quarters").val(),
                         year: selectedValue
                },
                     success: function (result) {

                         $('#BedSpaceList').empty();
                         $('#BedSpaceList').append(result);
                }
            });


        });
    });
    $('#nextPB').on('click', function (e) {


        console.log("next");
                 $.ajax({
                type: 'POST',
                url: '@Url.Content("~/ReportChart/ShowTab")',
                     data: {
                         type: tabBed.admission,
                         page: @ViewBag.Page + 1,
                         quarter: $("#Quarters").val(),
                         year: $("#Years").val()
                },
                     success: function (result) {

                         $('#BedSpaceList').empty();
                         $('#BedSpaceList').append(result);
                }
            });
    });
    $('#prevPB').on('click', function (e) {


        console.log("next");
                 $.ajax({
                type: 'POST',
                url: '@Url.Content("~/ReportChart/ShowTab")',
                     data: {
                         type: tabBed.admission,
                         page: @ViewBag.Page - 1,
                         quarter: $("#Quarters").val(),
                         year: $("#Years").val()
                },
                     success: function (result) {

                         $('#BedSpaceList').empty();
                         $('#BedSpaceList').append(result);
                }
            });
    });


</script>



