                    <div class="col-md-4">
                        @Html.LabelFor(x => x.Time_Transferred)
                    </div>
                    <div class="col-md-8 form-group" style="">
                        @Html.TextBoxFor(m => m.Time_Moved, new { @id = "Time_Transferred", @class = "form-control" })
                    </div>
                    <div class="col-md-4">
                        @Html.LabelFor(x => x.Transferred_By)
                    </div>
                    <div class="col-md-8 form-group" style="">
