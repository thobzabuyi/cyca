                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-4">
                                            @Html.LabelFor(x => x.courtName)
                                        </div>
                                        <div class="col-md-8 form-group" style="">
                                            @Html.TextBoxFor(m => m.courtName, new { @id = "court", @class = "form-control", @readonly = "readonly" })
                                        </div>
                                        <div class="col-md-4">
                                            @Html.LabelFor(x => x.selectProvince)
                                        </div>
                                        <div class="col-md-8 form-group" style="">
